[alias]
  st = status
  ci = commit
  br = branch
  df = diff
  ln = log --name-status
  lg = log --oneline --graph
  who = shortlog -s --
  sc = show --name-status

[user]
  name = rizwan ahmed
  email = rzwn.hmd@gmail.com

[init]
  defaultBranch = main

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only --features=interactive

[delta]
  features = decorations
  dark = true ; dark theme
  line-numbers = true
  side-by-side = true

[delta "interactive"]
  keep-plus-minus-markers = false

[delta "decorations"]
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = omit
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = file line-number syntax

[merge]
    conflictstyle = diff3
